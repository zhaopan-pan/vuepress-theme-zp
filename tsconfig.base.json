{
  "extends": "tsconfig-vuepress/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "ES2020",
    "paths": {
      "@theme-zp-components/*": [
        "./packages/vuepress-theme-zp/src/client/components/*"
      ],
      "@theme-zp-client/*": ["./packages/vuepress-theme-zp/src/client/*"],
      "@theme-zp-src/*": ["./packages/vuepress-theme-zp/src/*"],
      "@vuepress-zp/*": ["./packages/@vuepress-zp/*"]
    }
  }
}
